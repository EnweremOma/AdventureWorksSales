@model IEnumerable<AdventureWorksSales.Core.ProductCategory>

@if (Model != null && Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col"> S/N</th>
                <th scope="col"> Name</th>
                <th scope="col"> Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productCategory in Model)
            {
                <tr>
                    <td>
                        @productCategory.ProductCategoryID
                    </td>
                    <td>
                        @productCategory.Name
                    </td>

                    <td>
                        <button type="button" class="data-btn btn btn-primary" data-toggle="modal" data-target="#editproductCategory" onclick="GetProductCategory(@productCategory.ProductCategoryID, '@productCategory.Name','@productCategory.rowguid')">
                            Edit
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="successMessage text-right" id="successmessage" style="display:none;">
        <font color="green">
            <b>Saved successfully.</b>
        </font>
    </div>
    <br>


}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry, No records exist.
    </div>
}
<!-- Modal -->
<div class="modal fade" id="editproductCategory" tabindex="-1" role="dialog" aria-labelledby="productCategoryTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center" id="editProductCategory">Edit Product Category</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="editProductcategoryform" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-sm-2" for="inputTo">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtProductName" placeholder="Product Category Name">
                            <input type="hidden" class="form-control" id="txtProductId">
                            <input type="hidden" class="form-control" id="txtRowGuid" />
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="data-personcategory-submit">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>





